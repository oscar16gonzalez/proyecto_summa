<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-grat-200 rounded-lg shadow-lg text-gray-800">
    <h1 class="text-3xl font-bold text-center">CREATE ROUTE</h1>

    <form action="" method="POST" class="form-horizontal mt-4">
        <input type="date" name="fecha" placeholder="Fecha"
            class="border border-gray-200 w-full  placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
        <input type="text" name="tipo_vehiculo" placeholder="Tipo Vehiculo"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200  focus:bg-white" required>
        <input type="text" name="hora_salida" placeholder="Hora Salida"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200  focus:bg-white" required>
        <input type="number" name="cupos_disponibles" placeholder="Cupos Disponibles"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200  focus:bg-white" required>
        <input type="text" name="origen" placeholder="Origen"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200  focus:bg-white" required>
        <input type="text" name="destino" placeholder="Destino"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200  focus:bg-white" required>
        <button type="submit"
            class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700">
            Enviar </button>

            {{#if error}}
                <p class="text-red-500 font-bold text-lg my-3 text-center">* {{error}}</p>
            {{/if}}
    </form>

</div>